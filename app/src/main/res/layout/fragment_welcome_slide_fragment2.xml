<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen3"
    tools:context="com.example.aisha.clientapp.WelcomeSlideFragment2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="16dp"
                android:text="0101IT"
                android:textAlignment="gravity"

                android:textColor="@color/white"

                android:textSize="20sp"
                android:layout_weight="0.3"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_rollnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:layout_weight="25">

                <EditText
                    android:id="@+id/fragment2_roll_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Roll Number"
                    android:imeOptions="actionSearch"

                    android:textColorHint="@color/white"

                    android:inputType="number">

                </EditText>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/fragment2_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:imeOptions="actionSearch"


                android:textColorHint="@color/roll_editText_colour" />

        </android.support.design.widget.TextInputLayout>


        <Spinner
            android:id="@+id/fragment2_sem_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:addStatesFromChildren="false"
            android:entries="@array/semester_option"
            android:fadeScrollbars="true"
            android:fadingEdge="horizontal"
            android:prompt="@string/semester_spinner_prompt"
            android:scrollIndicators="right"
            android:verticalScrollbarPosition="defaultPosition">


        </Spinner>

        <Button
            android:id="@+id/fragment2_okay_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dot_dark_screen3"
            android:text="Okay"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>
